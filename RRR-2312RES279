<body>
    <div class="container">
        <h1>Packaged Food Fact Checker</h1>
        <p>Enter the product name or barcode to check its ingredients and nutritional content:</p>
        <input type="text" id="productInput" placeholder="Product name or barcode...">
        <button onclick="checkProduct()">Check</button>

        <div class="result" id="result">
            <!-- Result will be displayed here -->
        </div>
    </div>

    <script>
        // Sample data for demonstration purposes
        const foodData = {
            "Apple Juice": {
                ingredients: "Water, Apple Juice Concentrate, Citric Acid, Natural Flavor",
                nutrition: "Calories: 110, Sugar: 26g, Vitamin C: 120%"
            },
            "Chocolate Bar": {
                ingredients: "Cocoa Butter, Milk, Sugar, Chocolate, Soy Lecithin",
                nutrition: "Calories: 210, Fat: 12g, Sugar: 20g"
            },
            "Canned Corn": {
                ingredients: "Corn, Water, Salt",
                nutrition: "Calories: 80, Carbohydrates: 16g, Fiber: 2g"
            }
        };

        // Function to check product information
        function checkProduct() {
            const input = document.getElementById('productInput').value.trim();
            const resultDiv = document.getElementById('result');

            // Clear previous result
            resultDiv.innerHTML = '';

            // Check if the product exists in the data
            if (foodData[input]) {
                // Display product information
                const productData = foodData[input];
                resultDiv.innerHTML = `
                    <h3>Product: ${input}</h3>
                    <p><strong>Ingredients:</strong> ${productData.ingredients}</p>
                    <p><strong>Nutritional Content:</strong> ${productData.nutrition}</p>
                `;
            } else {
                resultDiv.innerHTML = `<p>Product not found in the database. Please try another product.</p>`;
            }
        }
    </script>
</body>

